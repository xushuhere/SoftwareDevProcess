<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tip_calculator"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.tipcalculator.TipCalculatorActivity">

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Check amount:"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/checkText"
        android:layout_width="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Party size:"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/partyText"
        android:layout_below="@+id/checkText"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="210dp"
        android:layout_height="1dp"

        android:background="#aa000000"
        android:layout_below="@+id/checkAmountValue"
        android:layout_toEndOf="@+id/checkText" />
    <ImageView
        android:id="@+id/line2"
        android:layout_width="210dp"
        android:layout_height="1dp"

        android:background="#aa000000"
        android:layout_below="@+id/partySizeValue"
        android:layout_toEndOf="@+id/checkText" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/checkAmountValue"
        android:text="120"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/checkText"
        android:layout_toEndOf="@+id/checkText"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse" />

    <Button
        android:text="COMPUTE TIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonCompute" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Tip:     15%"
        android:ems="10"
        android:layout_below="@+id/buttonCompute"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/tipText"
        android:layout_width="100dp" />

    <ImageView
        android:id="@+id/fifteenPerVLine"
        android:layout_height="1dp"

        android:background="#aa000000"
        android:layout_alignBottom="@+id/tipText"
        android:layout_alignStart="@+id/fifteenPercentTipValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fifteenPercentTipValue"
        android:text="5"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tipText"
        android:layout_toEndOf="@+id/tipText"
        android:layout_marginStart="6dp"
        android:layout_width="60dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="20%"
        android:ems="10"
        android:id="@+id/tw20TV"
        android:layout_alignTop="@+id/fifteenPercentTipValue"
        android:layout_toEndOf="@+id/fifteenPercentTipValue"
        android:layout_width="40dp" />

    <ImageView
        android:id="@+id/twTVline"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/tw20TV"
        android:layout_alignStart="@+id/twentyPercentTipValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />

    <ImageView
        android:id="@+id/twTVline"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/twentyfivePercentTipValue"
        android:layout_alignStart="@+id/twentyfivePercentTipValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />


    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Total: 15%"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/Total"
        android:layout_below="@+id/tipText"
        android:layout_alignParentStart="true"
        android:layout_width="100dp" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fifteenPercentTotalValue"
        android:text="35"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/Total"
        android:layout_toEndOf="@+id/Total"
        android:layout_marginStart="6dp"
        android:layout_width="60dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="20%"
        android:ems="10"
        android:id="@+id/tw20TT"
        android:layout_width="40dp"
        android:layout_alignTop="@+id/fifteenPercentTotalValue"
        android:layout_toEndOf="@+id/fifteenPercentTotalValue" />

    <EditText
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/twentyPercentTotalValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:text="36"
        android:layout_alignTop="@+id/tw20TT"
        android:layout_toEndOf="@+id/tw20TT"
        android:layout_marginStart="8dp"
        android:layout_width="60dp" />

    <ImageView
        android:id="@+id/twTTline"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/fifteenPercentTotalValue"
        android:layout_alignStart="@+id/fifteenPercentTotalValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />

    <ImageView
        android:id="@+id/twTTrline"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/twentyPercentTotalValue"
        android:layout_alignStart="@+id/twentyPercentTotalValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />

    <ImageView
        android:id="@+id/twffline"
        android:layout_height="1dp"
        android:background="#aa000000"
        android:layout_alignBottom="@+id/twentyfivePercentTotalValue"
        android:layout_alignStart="@+id/twentyfivePercentTipValue"
        android:layout_marginBottom="6dp"
        android:layout_width="60dp" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fifteenPercentTotalValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/buttonReset" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/twentyfivePercentTipValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:text="8"
        android:layout_alignTop="@+id/twfTVtext"
        android:layout_alignEnd="@+id/line2" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/twentyfivePercentTotalValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:text="38"
        android:layout_alignBottom="@+id/twTTrline"
        android:layout_alignStart="@+id/twffline" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="25%"
        android:ems="10"
        android:id="@+id/twfTVtext"
        android:layout_width="40dp"
        android:layout_alignTop="@+id/twentyPercentTipValue"
        android:layout_toEndOf="@+id/twentyPercentTipValue"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="25%"
        android:ems="10"
        android:id="@+id/twfTTtext"
        android:layout_width="40dp"
        android:layout_alignTop="@+id/twentyPercentTotalValue"
        android:layout_alignStart="@+id/twfTVtext" />

    <EditText
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/twentyPercentTipValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:text="6"
        android:layout_width="60dp"
        android:layout_alignTop="@+id/tw20TV"
        android:layout_alignStart="@+id/twentyPercentTotalValue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/partySizeValue"
        android:text="4"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:layout_below="@+id/checkText"
        android:layout_alignStart="@+id/tw20TV" />


</RelativeLayout>
