<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tip_calculator"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.tipcalculator.TipCalculatorActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/party"
        android:layout_height="50dp"
        android:layout_below="@+id/check"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Party size:"
            android:ems="10"
            android:id="@+id/partyText"
            android:layout_below="@+id/checkText"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:layout_width="160dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/partySizeValue"
            android:text="4"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:layout_below="@+id/checkText"
            android:layout_alignStart="@+id/tw20TV" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:id="@+id/buttons"
        android:layout_height="60dp"
        android:layout_below="@+id/party"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp">

        <Button
            android:text="COMPUTE TIP"
            android:layout_below="@+id/partyText"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonCompute"
            android:layout_weight="1"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:clickable="false"
            android:onClick="handleClick" />

        <Button
            android:text="RESET"
            android:layout_width="240dp"
            android:layout_below="@+id/fifteenPercentTotalValue"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonReset"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:onClick="handleClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/tip"
        android:layout_height="50dp"
        android:layout_below="@+id/buttons"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp">

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Tip:     15%"
            android:ems="10"
            android:layout_below="@+id/buttonCompute"
            android:layout_alignParentStart="true"
            android:id="@+id/tipText"
            android:layout_weight="1"
            android:layout_width="100dp" />

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/fifteenPercentTipValue"
            android:text="05"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/tipText"
            android:layout_toEndOf="@+id/tipText"
            android:layout_width="60dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="20%"
            android:ems="10"
            android:id="@+id/tw20TV"
            android:layout_alignTop="@+id/fifteenPercentTipValue"
            android:layout_toEndOf="@+id/fifteenPercentTipValue"
            android:layout_width="40dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/twentyPercentTipValue"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:text="6"
            android:layout_width="60dp"
            android:layout_alignTop="@+id/tw20TV"
            android:layout_alignStart="@+id/twentyPercentTotalValue"
            android:layout_weight="1" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="25%"
            android:ems="10"
            android:id="@+id/twfTTtext"
            android:layout_alignTop="@+id/twentyPercentTotalValue"
            android:layout_alignStart="@+id/twfTVtext"
            android:layout_width="40dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse" />

        <EditText
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/twentyfivePercentTipValue"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:text="8"
            android:layout_alignBaseline="@+id/twfTVtext"
            android:layout_alignBottom="@+id/twfTVtext"
            android:layout_toEndOf="@+id/twfTVtext"
            android:layout_weight="1"
            android:layout_width="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/total"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tip"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Total: 15%"
            android:ems="10"
            android:id="@+id/Total"
            android:layout_below="@+id/tipText"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse" />

        <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/fifteenPercentTotalValue"
            android:text="35"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/Total"
            android:layout_toEndOf="@+id/Total"
            android:layout_width="60dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="20%"
            android:ems="10"
            android:id="@+id/tw20TT"
            android:layout_alignTop="@+id/fifteenPercentTotalValue"
            android:layout_toEndOf="@+id/fifteenPercentTotalValue"
            android:layout_width="40dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse" />

        <EditText
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/twentyPercentTotalValue"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:text="36"
            android:layout_alignTop="@+id/tw20TT"
            android:layout_toEndOf="@+id/tw20TT"
            android:layout_width="60dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="25%"
            android:ems="10"
            android:id="@+id/twfTVtext"
            android:layout_alignTop="@+id/twentyPercentTipValue"
            android:layout_toEndOf="@+id/twentyPercentTipValue"

            android:layout_width="40dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse" />

        <EditText
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/twentyfivePercentTotalValue"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:text="38"
            android:layout_alignBaseline="@+id/twfTTtext"
            android:layout_alignBottom="@+id/twfTTtext"
            android:layout_toEndOf="@+id/twfTTtext"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:layout_width="60dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/check"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Check amount:"
            android:ems="10"
            android:id="@+id/checkText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:layout_width="160dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/checkAmountValue"
            android:text="120"
            android:layout_width="170dp"
            android:layout_alignTop="@+id/checkText"
            android:layout_toEndOf="@+id/checkText"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
            android:singleLine="true"
            android:selectAllOnFocus="false" />



    </LinearLayout>

</RelativeLayout>
